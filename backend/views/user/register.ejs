<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head') %>

<body>
    <%- include('../partials/header') %>

    <main>
        <section class="register">
            <div class="form-title">
                <h1>Ingrese sus datos</h1>
            </div>
                <form action="/" method="post">
                    <div>
                        <input class="wide-input" type="text" placeholder="Nombre y apellido" name="name">
                    </div>
                    <div>
                        <input class="wide-input" type="text" placeholder="Nombre y apellido" name="lastName">
                    </div>
                    <div>
                        <input class="wide-input" type="text" placeholder="Nombre de usuario" name="username"> 
                    </div>
                    <div>
                        <input class="wide-input" type="email" placeholder="E-mail" name="email">
                    </div>
                    <h4>Fecha de Nacimiento</h4>
                    <div>
                        <input class="wide-input" type="date" placeholder="mm/dd/yyyy" name="birth">
                    </div>
                    <div>
                        <input class="wide-input" type="text" placeholder="Domicilio" name="address">
                    </div>
                    <h4>Perfil del usuario</h4>
                    <div class="option-input">
                        <input type="radio" name="perfil" id="comprador">
                        <label for="comprador">Comprador</label>
                        <input type="radio" name="perfil" id="vendedor">
                        <label for="vendedor">Vendedor</label>
                    </div>
                <h4 for="">Intereses</h4>
                <div class="option-input">
                    <input type="checkbox" name="intereses" id="electro">
                    <label for="electro">Electro</label>
                    <input type="checkbox" name="intereses" id="moda">
                    <label for="moda">Moda</label>
                    <input type="checkbox" name="intereses" id="hogar">
                    <label for="hogar">Hogar</label>
                    <input type="checkbox" name="intereses" id="jugueteria">
                    <label for="jugueteria">Juguetería</label>
                    <input type="checkbox" name="intereses" id="vida-sana">
                    <label for="vida-sana">Vida sana</label>
                </div>
                <div>
                    <h4>Foto de perfil</h4>
                    <input class="wide-input" type="file" name="profile_picture">
                </div>
                <div>
                    <input class="wide-input" type="password" name="password" id="password"
                    placeholder="Contraseña">
                </div>
                <div>
                    <input class="wide-input" type="password" name="confirm_password" id="password"
                        placeholder="Confirmar contraseña">
                </div>
                <div class="button-div">
                    <input class="button-input" type="reset">
                    <input class="button-input" type="submit">
                </div>
            </form>
        </section>
    </main>
    
    <%- include('../partials/footer') %>

</body>

</html>